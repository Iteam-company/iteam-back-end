{
	"name": "iteam-back-end",
	"version": "1.0.0",
	"description": "```sh\r 1. Download or clone the repository\r 2. Create and fill .env\r 3. yarn (or npm i)\r 4. yarn start (or npm start)\r ```",
	"main": "index.ts",
	"engines": {
		"node": "16.x",
		"yarn": "1.22.x"
	},
	"homepage": "https://github.com/iteam-comp/iteam-back-end#readme",
	"scripts": {
		"dev": "nodemon index.ts",
		"start": "cd dist && node index.js",
		"start:prod": "yarn && yarn build && cd dist && node index.js",
		"prebuild": "rm -rf dist && mkdir dist && tsc",
		"build": "tsc -p tsconfig.build.json",
		"postbuild": "cp package*.json dist && cd dist && yarn install --frozen-lockfile",
		"build:watch": "tsc -w -p tsconfig.build.json",
		"lint": "eslint --ext .ts src",
		"lint:fix": "eslint --ext .ts src --fix"
	},
	"dependencies": {
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"mongodb": "^4.11.0",
		"mongoose": "^6.6.5",
		"swagger-ui-express": "^4.5.0",
		"uuid": "^9.0.0",
		"typescript": "^4.8.4"
	},
	"devDependencies": {
		"tslib": "^2.4.0",
		"ts-node": "^10.9.1",
		"tsc": "^2.0.4",
		"@swc/core": "^1.3.9",
		"@swc/helpers": "^0.4.12",
		"@types/cookie-parser": "^1.4.3",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.14",
		"@types/node": "^18.11.2",
		"@types/swagger-ui-express": "^4.1.3",
		"@typescript-eslint/eslint-plugin": "^5.40.1",
		"@typescript-eslint/parser": "^5.40.1",
		"chokidar": "^3.5.3",
		"concurrently": "^7.4.0",
		"eslint": "^8.25.0",
		"nodemon": "^2.0.20",
		"regenerator-runtime": "^0.13.10"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iteam-comp/iteam-back-end.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/iteam-comp/iteam-back-end/issues"
	},
	"nodemonConfig": {
		"ignore": [
			"**/test/**",
			"**/docs/**"
		],
		"delay": 1500
	}
}
