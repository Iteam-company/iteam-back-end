{
  "name": "iteam-back-end",
  "version": "1.0.0",
  "description": "```sh\r 1. Download or clone the repository\r 2. Create and fill .env\r 3. yarn (or npm i)\r 4. yarn start (or npm start)\r ```",
  "main": "index.ts",
  "scripts": {
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/main.js",
    "build": "swc src -d dist",
    "start": "NODE_ENV=production node dist/main.js",
    "clean": "rm -rf dist",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iteam-comp/iteam-back-end.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iteam-comp/iteam-back-end/issues"
  },
  "homepage": "https://github.com/iteam-comp/iteam-back-end#readme",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.9",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "chokidar": "^3.5.3",
    "concurrently": "^7.4.0",
    "eslint": "^8.25.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^6.6.5",
    "swagger-ui-express": "^4.5.0"
  }
}
